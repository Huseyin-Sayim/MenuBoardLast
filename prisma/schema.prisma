generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

model User {
  id               String             @id @default(uuid())
  name             String
  email            String             @unique
  phoneNumber      String             @unique
  password         String
  role             Role               @default(user)
  RefreshToken     RefreshToken[]
  Screen           Screen[]
  Media            Media[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  DeviceScreenCode DeviceScreenCode[]
  TemplateConfig   TemplateConfig[]
}

model Screen {
  id           String         @id @default(uuid())
  name         String
  deviceId     String         @unique
  userId       String
  width        Int
  height       Int
  user         User           @relation(fields: [userId], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  ScreenConfig ScreenConfig[]
}

model Template {
  id             String           @id @default(uuid())
  name           String
  path           String
  component      String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  TemplateConfig TemplateConfig[]
  ScreenConfig   ScreenConfig[]
}

model TemplateConfig {
  id           String         @id @default(uuid())
  userId       String
  templateId   String
  Template     Template       @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  configData   Json
  ScreenConfig ScreenConfig[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  devices   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Media {
  id           String         @id @default(uuid())
  name         String
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  extension    String
  url          String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  ScreenConfig ScreenConfig[]
}

model ScreenConfig {
  id               String          @id @default(uuid())
  screenId         String
  screen           Screen          @relation(fields: [screenId], references: [id])
  mediaId          String?
  templateId       String?
  mediaIndex       Int
  templateConfigId String?
  displayDuration  Int?
  Media            Media?          @relation(fields: [mediaId], references: [id])
  Template         Template?       @relation(fields: [templateId], references: [id])
  TemplateConfig   TemplateConfig? @relation(fields: [templateConfigId], references: [id])
}

model DeviceScreenCode {
  id       String @id @default(uuid())
  deviceId String @unique
  code     String @unique
  width    Int
  height   Int
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}

model Gallery {
  id        String   @id @default(uuid())
  name      String
  url       String
  extension String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
